# Jive Flutter-Rust 环境配置
# 复制此文件为 .env 并根据需要修改

# API 服务端口
RUST_API_PORT=8012
FLUTTER_DEV_PORT=3020

# 数据库配置
DATABASE_URL=postgresql://localhost:5432/jive
POSTGRES_PORT=5432
POSTGRES_USER=jive
POSTGRES_PASSWORD=jive_password
POSTGRES_DB=jive

# Redis 配置（可选）
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# 日志级别
RUST_LOG=info
FLUTTER_LOG=info

# 开发模式
DEV_MODE=true

# API 密钥（生产环境请更改）
JWT_SECRET=your-secret-key-here
ENCRYPTION_KEY=your-256-bit-encryption-key-here

# 第三方服务（可选）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# 微信配置（中国用户）
WECHAT_APP_ID=
WECHAT_APP_SECRET=

# 支付宝配置（中国用户）
ALIPAY_APP_ID=
ALIPAY_PRIVATE_KEY=